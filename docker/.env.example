# ===========================================
# n8n Configuration
# ===========================================
N8N_USER=admin
N8N_PASSWORD=change_this_secure_password
N8N_HOST=localhost
WEBHOOK_URL=http://localhost:5678/
TIMEZONE=America/New_York

# ===========================================
# Directory Mappings
# ===========================================
HOST_STATE_DIR=./state-data
HOST_FILES_DIR=./my_videos
HOST_GAMEPLAY_DIR=./gameplay
HOST_SCRIPTS_DIR=./n8n-scripts
HOST_YOUTUBE_DIR=./youtube-data

# ===========================================
# API Keys (Configure in n8n UI)
# ===========================================
# These are reference only - actual keys go in n8n credentials

# Reddit API - https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Google Gemini - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# YouTube Data API - https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Telegram Bot - @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Google Sheets to upload to tiktok or insta
GOOGLE_SHEETS_CLIENT_ID=your_sheets_client_id
GOOGLE_SHEETS_CLIENT_SECRET=your_sheets_client_secret

# ===========================================
# Processing Settings
# ===========================================
VIDEO_SPLIT_THRESHOLD=90
VIDEO_PART_DURATION=50
MIN_LAST_PART_DURATION=10
TTS_API_URL=http://your-tts-service:5001 # i used edge-tts docker container but you can use any tts service